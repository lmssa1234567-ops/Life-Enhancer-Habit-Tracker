@page "/accounts"

<PageTitle>Accounts</PageTitle>

<section class="accounts-shell">
    <header class="card">
        <h1>Accounts</h1>
        <small>Manage your habit modules from one place.</small>
    </header>

    <section class="accounts-grid">
        <NavLink href="routines" class="account-card card" Match="NavLinkMatch.Prefix">
            <strong>Routines</strong>
            <small>Daily and specific-day habits</small>
        </NavLink>

        <NavLink href="tasks" class="account-card card" Match="NavLinkMatch.Prefix">
            <strong>Tasks</strong>
            <small>Track planned hours</small>
        </NavLink>

        <NavLink href="actions" class="account-card card" Match="NavLinkMatch.Prefix">
            <strong>Actions</strong>
            <small>One-time todos and due dates</small>
        </NavLink>

        <NavLink href="goals" class="account-card card" Match="NavLinkMatch.Prefix">
            <strong>Goals</strong>
            <small>Categories and completion tracking</small>
        </NavLink>

        <NavLink href="mood" class="account-card card" Match="NavLinkMatch.Prefix">
            <strong>Mood</strong>
            <small>Daily mood check-ins</small>
        </NavLink>

        <NavLink href="visualizations" class="account-card card" Match="NavLinkMatch.Prefix">
            <strong>Visualization</strong>
            <small>AI-generated motivation snapshots</small>
        </NavLink>
    </section>
</section>
